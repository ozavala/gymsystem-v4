<div class="panel">
  <div class="panel-heading">
    <h2>Edit Gym Site Settings</h2>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="panel-body">
        <%= form_for @gymsite, url: settings_gymsites_path, html: { class: 'form-settings' } do |f| %>
        <%= render 'layouts/shared/errors', object: @gymsite %>

        <div class="form-group">
          <%= f.label :name, 'Name', class: 'col-lg-6 col-sm-6 control-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description, 'Description', class: 'col-lg-6 col-sm-6 control-label' %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone, class: 'col-lg-6 col-sm-6 control-label' %>
          <%= f.text_field :phone, "placeholder data-mask" => "(999) 999-9999", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: 'col-lg-6 col-sm-6 control-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
    </div><!-- end of col -->
    <div class="panel">
      <div class='col-md-6'>
        <div class="panel-body">
        <div class="form-group">
          <%= f.label :street_address, 'Street Address', class: 'col-lg-6 col-sm-6 control-label' %>
          <%= f.text_field :street_address, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :city, class: 'col-lg-6 col-sm-6 control-label' %>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :state, class: 'col-lg-6 col-sm-6 control-label' %>
          <%= f.text_field :state, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= f.label :zip, class: 'col-lg-6 col-sm-6 control-label' %>
          <%= f.text_field :zip, class: 'form-control' %>
        </div>
        <br/>
        <%= f.submit nil, class: 'btn btn-primary' %>
        <% end %>
      </div>
      </div><!-- end of 2nd column -->
    </div>
  </div>
</div>
